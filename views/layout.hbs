<!DOCTYPE html>
<html>
<head>
    <title>{{#if title}}{{title}}{{/if}}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {{#if settings.production}}
        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="/libs/html5shiv.js"></script>
        <![endif]-->
        <script src="/libs/underscore-min.js"></script>
        <script src="/libs/angular.min.js"></script>
        <script src="/libs/angular-ui-router.min.js"></script>
        <script src="/libs/ui-bootstrap-tpls.min.js"></script>
        <script src="/libs/angular-animate.min.js"></script>
        <script src="/libs/angular-sanitize.min.js"></script>
        <script src="/libs/jquery.min.js"></script>
        <script src="/libs/sss.min.js?v=2"></script>
        <link href="/css/bootstrap.min.css" rel="stylesheet">
        <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
    {{else}}
        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="/bower/html5shiv/dist/html5shiv.js"></script>
        <![endif]-->
        <script src="/bower/underscore/underscore.js"></script>
        <script src="/bower/angular/angular.js"></script>
        <script src="/bower/angular-ui-router/release/angular-ui-router.js"></script>
        <script src="/bower/angular-bootstrap/ui-bootstrap-tpls.js"></script>
        <script src="/bower/angular-sanitize/angular-sanitize.js"></script>
        <script src="/bower/angular-animate/angular-animate.js"></script>
        <script src="/bower/jquery/dist/jquery.js"></script>
        <script src="/js/app/services/util.js"></script>
        <script src="/js/app/services/node-services.js"></script>
        <script src="/js/app/services/search-service.js"></script>
        <script src="/js/app/services/ui-router-breadcrumbs.js"></script>
        <script src="/js/app/sss/overview/view.js"></script>
        <script src="/js/app/sss/search/view.js"></script>
        <script src="/js/app/sss/results/view.js"></script>
        <script src="/js/app/sss/overview/view.js"></script>
        <script src="/js/app/sss/details/view.js"></script>
        <script src="/js/app/app.js"></script>
        <link href="../bower/bootstrap/dist/css/bootstrap.css" rel="stylesheet">
        <link href="../bower/bootstrap/dist/css/bootstrap-theme.css" rel="stylesheet">
    {{/if}}

    <link href="/css/style.css" rel="stylesheet">
</head>

<body ng-app="app" >
<header>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <div class="nav navbar-left">
                        {{#if title}}<a class="navbar-text" href="/">{{title}}</a>{{/if}}
                    </div>
                </div>
                <div class="col-sm-8">
                    <div class="nav navbar-right">
                        {{#if isAuthenticated}}
                            <p class="navbar-text">Signed in as
                                {{#if user.name}}
                                    {{user.name}}
                                {{else}}
                                    {{user.username}}
                                {{/if}}
                                    &nbsp;<a class="navbar-link" href="/logout" title="Logout"><span class="glyphicon glyphicon-log-out"></span></a></p>
                                {{else}}
                            <p class="navbar-text"><a class="navbar-link" href="/login" title="Login">Login <span class="glyphicon glyphicon-log-in"></span></a></p>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <ui-breadcrumbs displayname-property="data.displayName"></ui-breadcrumbs>
                </div>
            </div>
        </div>
    </nav>
</header>
<main class="container">
    <div class="row">
        <div class="col-md-12">
            <section ui-view></section>     <!-- AngularJS ui-routing takes control -->
        </div>
    </div>
</main>
<footer>
    <nav class="navbar navbar-default navbar-static-bottom">
        <div class="container">
            <div class="row">
                <div class="nav">
                    {{#if title}}<p class="navbar-text">&copy; {{title}} 2016</p>{{/if}}
                </div>
            </div>
        </div>
    </nav>
</footer>
</body>
</html>